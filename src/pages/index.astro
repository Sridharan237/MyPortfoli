---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts'
import Navbar from '../components/Portfolio/Navbar.astro'
import { getCollection } from 'astro:content';
import BlogCard from '../components/Portfolio/BlogCard.astro'

const posts = await getCollection('blog')
---

<!doctype html>
<html lang="en">
	<head>
		<title>Portfolio</title>
	</head>
	<body id="root" class="w-full flex flex-col h-screen items-center justify-start">
		<div id="navbar+title" class="flex flex-col w-full gap-6 max-w-xl">
			<Navbar/>
			<h1 class="w-full text-7xl font-medium tracking-tight">hey i'm sridharan, designer, engineer & developer</h1>
			
			{
				posts.map((blog) => (
					<BlogCard title={blog.data.title} date={blog.data.pubDate} slug={blog.slug}/>
				))
			}
		</div>
	</body>
</html>
