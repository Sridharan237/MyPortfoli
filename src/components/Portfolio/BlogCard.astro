---
    import FormattedDate from "../FormattedDate.astro";

    const {title, date, slug} = Astro.props;
    //const {title='computer', date="3 days ago"} = Astro.props;        -> default props
---

<!-- slug is SEO specific for searching -->
<a href={`/blog/${slug}`}>
    <article class="flex flex-row items-center justify-between w-full">
        <h3 class="text-base text-black">{title}</h3>
        <p class="text-gray-500">
            <FormattedDate date={date}/>
        </p>
    </article>
</a>